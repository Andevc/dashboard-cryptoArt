---
import Layout from '@layouts/Layout.astro';
import Slide from '@components/AuctionCardSlide.jsx'
import TopCreators from '@components/TopCreators.jsx';
---

<Layout tittle="Home">
	<main class="main-home">
		<section class="main-home-head">
			<section class="home-slider">
			</section>
			<section class="home-top-creator">
				<TopCreators />
			</section>
		</section>
		
	</main>
</Layout>

<style>
	.main-home{
		width: 100%;
		height: 100vh;
		border: 1px solid white;
		padding: 1em;
		display: grid;
		grid-template-columns: repeat(3,1fr);
		grid-template-rows: repeat(5,1fr);
		column-gap: 2em;
		row-gap: 2em;
		border-radius: 2em;
	}

	.main-home-head{
		border: 1px solid white;
		grid-row: 1 / 4;
		grid-column: 1 / 4;
		display: grid;
		grid-template-columns: repeat(3,1fr);
		column-gap: 2em;
	}

	.main-home-head > *{
		
		border-radius: 1em;
		background: #090909;
	}
	.home-slider{
		grid-column: 1/3;
	}
	.home-top-creator{
		grid-column: 3/4;
		padding: 1em;
	}
	
	

</style>



@/